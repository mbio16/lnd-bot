FROM python:3.10-slim-buster
LABEL maintainer="github.com/mbio16"
LABEL version="2.0"

RUN apt-get -y update
RUN apt-get -y upgrade

WORKDIR /app

COPY requirements.txt requirements.txt

RUN pip3 install -r requirements.txt 

ADD ./src .

RUN adduser --disabled-password --gecos '' python-user && chown -R python-user /app
USER python-user

CMD ["python3","-u", "main-rest-api.py"]

