FROM python:3.8-slim-buster

LABEL maintainer="mbio16"
LABEL version="2.0"


RUN apt-get update

WORKDIR /app


COPY requirements.txt requirements.txt

RUN pip3 install -r requirements.txt 

ADD ./src .

RUN adduser --disabled-password --gecos '' python-user && chown -R python-user /app
USER python-user

CMD ["python3","-u", "main-rest-api.py"]

